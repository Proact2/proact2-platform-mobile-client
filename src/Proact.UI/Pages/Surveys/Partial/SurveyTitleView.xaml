<?xml version="1.0" encoding="UTF-8" ?>
<Grid
    x:Class="Proact.UI.SurveyTitleView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    RowSpacing="0">

    <Grid.RowDefinitions>
        <RowDefinition Height="46" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
    </Grid.RowDefinitions>

    <Label
        Grid.Row="0"
        FontSize="16"
        HorizontalOptions="Start"
        Style="{x:StaticResource SecondaryMediumLabelStyle}"
        Text="{Binding ExpiredDateLabelText}"
        VerticalOptions="Start" />

    <Label
        Grid.Row="1"
        FontSize="28"
        Style="{x:StaticResource PrimaryMediumLabelStyle}"
        Text="{Binding SurveyModel.Title}" />

    <Label
        Grid.Row="2"
        FontSize="16"
        Style="{x:StaticResource PrimaryMediumLabelStyle}"
        Text="{Binding VersionLabelText}" />

</Grid>
