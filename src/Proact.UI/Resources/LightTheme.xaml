    <Color x:Key="NavigationBarColor">#213384</Color>
    <Color x:Key="NavigationBarTextColor">White</Color>

    <Color x:Key="PageBackgroundColor">White</Color>
    <Color x:Key="EditorPageBackgroundColor">#F2F3F3</Color>
    <Color x:Key="ElevationOverlayBackgroundColor">White</Color>

    <Color x:Key="PrimaryColor">#4051e6</Color>
    <Color x:Key="PrimaryDarkColor">#213384</Color>
    <Color x:Key="SecondaryColor">#24b780</Color>
    <Color x:Key="ComplementaryColor">#E8505B</Color>

    <Color x:Key="PrimaryTextColor">#D9000000</Color>
    <Color x:Key="SecondaryTextColor">#8C000000</Color>
    <Color x:Key="TextOnPrimaryColor">White</Color>
    <Color x:Key="TextOnSecondaryColor">White</Color>

    <Color x:Key="DividerColor">#E4E8EC</Color>
    <Color x:Key="TransparentColor">Transparent</Color>

    <Color x:Key="VoiceRecordingColor">#7D8BFC</Color>
    <Color x:Key="VoiceRecordingDarkColor">#596AFA</Color>

