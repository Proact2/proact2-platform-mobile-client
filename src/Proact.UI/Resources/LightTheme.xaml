    <Color x:Key="SigninPageBackgroundColor">#3D6DC8</Color>

    <!--  Wall messages  -->

    <Color x:Key="TextMessageIconButtonColor">#213384</Color>
    <Color x:Key="TextMessageBGButtonColor">#EBF4FF</Color>
    <Color x:Key="VoiceMessageIconButtonColor">#762CFB</Color>
    <Color x:Key="VoiceMessageBGButtonColor">#F9EDFF</Color>
